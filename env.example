# Environment variables for GNN Attack Path Demo
# Copy this file to .env and fill in your actual values
# The .env file is gitignored and will not be committed to the repository

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# OpenAI Configuration (REQUIRED for LangGraph agent)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# UI Configuration
REACT_APP_API_URL=http://localhost:8000

# GNN Model Configuration
GNN_MODEL_PATH=models/gnn_model.pth
GNN_DEVICE=cpu

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
CACHE_TTL=300
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_PER_MINUTE=60

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_PORT=9090

# MCP (Model Context Protocol) Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8001
MCP_CLIENT_TIMEOUT=30

# MLflow Configuration
# For local development, use: sqlite:///mlflow.db
# For GCP deployment, use the Cloud Run MLflow server:
MLFLOW_TRACKING_URI=https://gnn-demo-mlflow-311591392953.us-central1.run.app
MLFLOW_EXPERIMENT_NAME=gnn-attack-paths

# Optuna Configuration
OPTUNA_STORAGE=sqlite:///optuna.db
OPTUNA_STUDY_NAME=gnn_hyperparameter_optimization
